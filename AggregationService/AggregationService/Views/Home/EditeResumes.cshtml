@model RabbitDLL.Resume

@{
    ViewData["Title"] = "EditeResumes";
}

<h2>Добавить резюме</h2>

<h4>Резюме</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditeResumes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speiality" class="control-label"></label>
                <input asp-for="Speiality" class="form-control" />
                <span asp-validation-for="Speiality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResumeName" class="control-label"></label>
                <input asp-for="ResumeName" class="form-control" />
                <span asp-validation-for="ResumeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

